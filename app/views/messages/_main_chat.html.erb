<div class=main-view-top>
  <div class=chat-view-name>hogehuge</div>
  <div class=chat-end-btn>
   <a href="#">チャットを終了する</a>
  </div>
</div>

<div class=chat_view>
  <div class=chat-text-box>
   <div class=chat-text-top>
    <span class=chat-text-name>user</span>
    <span class=chat-text-time>yyyy/mm/dd(aaa)hh:mm:ss</span>
   </div>
   <div class=chat-text-message>おはよう</div>
  </div>

</div>



<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>